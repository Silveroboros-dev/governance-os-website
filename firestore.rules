rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Waitlist collection - public can submit, only admins can read
    match /waitlist/{document} {
      // Allow anyone to create a new waitlist entry
      allow create: if
        // Must have required fields
        request.resource.data.keys().hasAll(['email', 'company', 'role']) &&
        // Email must be a valid string
        request.resource.data.email is string &&
        request.resource.data.email.size() > 0 &&
        request.resource.data.email.size() < 255 &&
        // Company must be a valid string
        request.resource.data.company is string &&
        request.resource.data.company.size() > 0 &&
        request.resource.data.company.size() < 255 &&
        // Role must be a valid string
        request.resource.data.role is string &&
        request.resource.data.role.size() > 0 &&
        // Prevent extra fields from being added (optional security measure)
        request.resource.data.keys().hasOnly(['email', 'company', 'role', 'source', 'createdAt', 'status']);

      // No one can read, update, or delete from the client
      // You'll access this data through Firebase Console or Admin SDK
      allow read, update, delete: if false;
    }

    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
